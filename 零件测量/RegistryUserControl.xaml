<UserControl x:Class="零件测量.RegistryUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:零件测量"
             mc:Ignorable="d" 
             d:DesignHeight="312.5" d:DesignWidth="360">
    <UniformGrid Columns="2" Rows="3" Background="White">
        <GroupBox Header="用户名">
            <TextBox x:Name="yhm" TextAlignment="Center"/>
        </GroupBox>
        <GroupBox Header="密码">
            <PasswordBox x:Name="mm"/>
        </GroupBox>
        <GroupBox Header="姓名">
            <TextBox x:Name="xm" TextAlignment="Center"/>
        </GroupBox>
        <GroupBox Header="工号">
            <TextBox x:Name="gh" TextAlignment="Center"/>
        </GroupBox>
        <GroupBox Header="性别">
            <ComboBox x:Name="xb" >
                <ComboBoxItem Content="男"/>
                <ComboBoxItem Content="女"/>
            </ComboBox>
        </GroupBox>
        <GroupBox Header="年龄">
            <TextBox x:Name="nl" TextAlignment="Center"/>
        </GroupBox>
    </UniformGrid>
</UserControl>
